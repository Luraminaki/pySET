    "version": "0.1.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "WebApp",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server_app.py",
            "args": ["--configuration=${workspaceFolder}/config.json"],
            "console": "integratedTerminal",
            "justMyCode": false,
            // "debugOptions": [
            //     "WaitOnAbnormalExit",
            //     "WaitOnNormalExit",
            //     //"Sudo"
            // ]
        }
    ],
    "compounds": [
        {
            "name": "pySET",
            "configurations": [
                "WebApp"
            ]
        }
    ]
}
